@using AutoCareHub.Web.Models.Appointment

@model List<AppointmentViewModel>

<h2 class="text-center">All appointments</h2>

<table class="table">
    <thead>
        <tr class="table-dark">
            <th scope="col">#</th>
            <th scope="col">Service</th>
            <th scope="col">Appointment setter full name</th>
            <th scope="col">Appointment setter phone number</th>
            <th scope="col">Date</th>
            <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].Service.Name</td>
                <td>@($"{Model[i].User.FirstName} {@Model[i].User.LastName}")</td>
                <td>@Model[i].User.PhoneNumber</td>
                <td>@Model[i].Date.ToString("dd/MM/yyyy")</td>
                <td>
                    <a class="ml-2 btn btn-danger" asp-area="Admin" asp-controller="Appointment" asp-action="Delete"
                       asp-route-id="@Model[i].Id" onclick="return confirm('Are you sure you want to delete this appointment?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>