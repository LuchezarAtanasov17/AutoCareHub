@page
@model LoginModel

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/style.css">
    <script src="https://kit.fontawesome.com/b9403dda92.js" crossorigin="anonymous"></script>
</head>

<body class="Autoleaders-scaled-img">
    <div>
        <div class="content">
            <header>Sign in</header>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <span asp-validation-for="Input.Email"></span>
                <div class="field">
                    <span class="fa fa-user"></span>
                    <input asp-for="Input.Email" type="text" required placeholder="Email or Phone">
                </div>
                <span asp-validation-for="Input.Password" class="show">SHOW</span>
                <div class="field space">
                    <span class="fa fa-lock"></span>
                    <input asp-for="Input.Password" type="password" class="pass-key" required placeholder="Password">
                </div>
                <div class="pass">
                    <a href="#">Forgot Password?</a>
                </div>
                <div class="field" style="border-radius:60px; background-color:#202C45">
                    <button style="width:100%" id="login-submit" class="btn btn-custom" type="submit">SIGN IN</button>
                </div>
            </form>
            <div class="signup" style="padding-top: 1em;">
                Don't have account?
                <a href="./Register">Signup Now</a>
            </div>
        </div>
    </div>
    <script>
        const pass_field = document.querySelector('.pass-key');
        const showBtn = document.querySelector('.show');
        showBtn.addEventListener('click', function () {
            if (pass_field.type === "password") {
                pass_field.type = "text";
                showBtn.textContent = "HIDE";
                showBtn.style.color = "#3498db";
            } else {
                pass_field.type = "password";
                showBtn.textContent = "SHOW";
                showBtn.style.color = "#222";
            }
        });
    </script>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}