@page
@model RegisterModel

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/style.css">
    <script src="https://kit.fontawesome.com/b9403dda92.js" crossorigin="anonymous"></script>
</head>

<body class="Autoleaders-scaled-img">
    <div>
        <div class="content">
            <header style="margin-bottom:0px">Sign up</header>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                <div class="field">
                    <span class="fa fa-user"></span>
                    <input asp-for="Input.FirstName" type="text" class="form-control" required placeholder="First name">
                </div>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                <div class="field space">
                    <span class="fa fa-user"></span>
                    <input asp-for="Input.LastName" type="text" class="form-control" required placeholder="Last name">
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div class="field space">
                    <span class="fa fa-envelope"></span>
                    <input asp-for="Input.Email" type="text" class="form-control" required placeholder="Email">
                </div>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                <div class="field space">
                    <span class="fa fa-phone"></span>
                    <input asp-for="Input.PhoneNumber" type="text" class="form-control" required placeholder="Phone number">
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="field space">
                    <span class="fa fa-lock"></span>
                    <input asp-for="Input.Password" type="password" class="pass-key form-control" required placeholder="Password" autocomplete="on">
                    <span class="show">SHOW</span>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <div class="field space">
                    <span class="fa fa-lock"></span>
                    <input asp-for="Input.ConfirmPassword" type="password" required placeholder="Repeat password">
                </div>
                <div class="field space" style="border-radius:60px; background-color:#202C45" >
                    <button style="width:100%" id="registerSubmit" class="btn btn-custom" type="submit">SIGN UP</button>
                </div>
            </form>
        </div>
    </div>
    <script>
        const pass_field = document.querySelector('.pass-key');
        const showBtn = document.querySelector('.show');
        showBtn.addEventListener('click', function () {
            if (pass_field.type === "password") {
                pass_field.type = "text";
                showBtn.textContent = "HIDE";
                showBtn.style.color = "#3498db";
            } else {
                pass_field.type = "password";
                showBtn.textContent = "SHOW";
                showBtn.style.color = "#222";
            }
        });
    </script>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

