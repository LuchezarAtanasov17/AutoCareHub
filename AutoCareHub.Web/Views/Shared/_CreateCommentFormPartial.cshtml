@using AutoCareHub.Services.Comments

@model CreateCommentRequest

<div class="comment-form">
    <h2>Leave a comment</h2>
    <form asp-controller="Comment" asp-action="Create" asp-route-id="@Model.ServiceId" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label for="message">Message *</label>
            <textarea asp-for="@Model.Value" id="message" cols="30" rows="5" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-custom" type="submit">Post Comment</button>
        </div>
    </form>
</div>
